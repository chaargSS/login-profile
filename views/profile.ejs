  $("#Edit").click(function(e){
     
    $.ajax({type: "POST",
            url: "/login/editProfile",
            data: { id: '<%= name %>'},
            contentType:'text/html',
            success:function(result){
               
              
            }
           });
  });
});
    </script>
  </body>
</html>
